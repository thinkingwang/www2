<SCRIPT LANGUAGE="JavaScript">
	function getNodePosition(node) {     
        var top = 0;
        while (node) {   
            if (node.tagName) {
                top = top + node.offsetTop;
                
                node = node.offsetParent;
            }
            else {
                node = node.parentNode;
            }
        } 
        return top;
    }
</SCRIPT>
